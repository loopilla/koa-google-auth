{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop":false,
        "allowJs": true,
        "sourceMap": true,
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/@types/*"
            ]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": ["node_modules"]
}